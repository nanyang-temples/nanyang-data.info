---
import BaseHead from "@components/BaseHead.astro";
import SkipLink from "@components/ui/SkipLink.astro";
import type { Props as BaseHeadProps } from "@components/BaseHead.astro";

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
  </head>
  <body>
    <SkipLink />
    <slot name="header" />
    <main id="content">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
