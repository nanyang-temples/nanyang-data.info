---
import Header from "@components/page/Header.astro";
import Footer from "@components/page/Footer.astro";
import Button from "@components/ui/Button.astro";
import Layout from "@layouts/Base.astro";
import type { Props as BaseHeadProps } from "@components/BaseHead.astro";
import Logo from "@components/Logo.astro";

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
  <Header slot="header">
    <span slot="logo">
      <Logo />
    </span>
    <Button slot="action-item" href="/explore/">Explore</Button>
  </Header>
  <section>
    <slot />
  </section>
  <Footer slot="footer">
    <Logo slot="logo" />
  </Footer>
</Layout>

<style>
  section {
    width: var(--container-max-width);
  }
</style>
