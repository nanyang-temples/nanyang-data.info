---
import Header from "@components/page/Header.astro";
import Footer from "@components/page/Footer.astro";
import Button from "@components/ui/Button.astro";
import Layout from "@layouts/Base.astro";
import type { Props as BaseHeadProps } from "@components/BaseHead.astro";
import Logo from "@components/Logo.astro";

export interface Props {
  seo?: BaseHeadProps;
  isVersionOf?: string;
}

const { seo, isVersionOf } = Astro.props as Props;
---

<Layout {seo} {isVersionOf}>
  <Header slot="header">
    <span slot="logo">
      <Logo />
    </span>
    <Button slot="action-item" href="/explore/">Explore</Button>
  </Header>
  <slot />
  <Footer slot="footer">
    <Logo slot="logo" />
  </Footer>
</Layout>
